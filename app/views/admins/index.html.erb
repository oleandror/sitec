<p id="notice"><%= notice %></p>

<h1>Admins</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Last name</th>
      <th>Dni</th>
      <th>Phone number</th>
      <th>Address</th>
      <th>City</th>
      <th>Gender</th>
      <th>Birthdate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.name %></td>
        <td><%= admin.last_name %></td>
        <td><%= admin.dni %></td>
        <td><%= admin.phone_number %></td>
        <td><%= admin.address %></td>
        <td><%= admin.city %></td>
        <td><%= admin.gender %></td>
        <td><%= admin.birthdate %></td>
        <td><%= link_to 'Show', admin %></td>
        <td><%= link_to 'Destroy', admin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

