<h2>CREAR CUENTA</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name,  autofocus: true, class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :last_name, "Apellido" %><br />
    <%= f.text_field :last_name,  autofocus: true, class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :dni, "DNI" %><br />
    <%= f.text_field :dni,  autofocus: true, class:"form-control" %>
  </div>

   <div class="field">
    <%= f.label :city, "Ciudad" %><br />
    <%= f.text_field :city,  autofocus: true, class:"form-control" %>
  </div>

   <div class="field">
    <%= f.label :address, "Dirección" %><br />
    <%= f.text_field :address,  autofocus: true, class:"form-control" %>
  </div>

   <div class="field">
    <%= f.label :phone_number, "Número de teléfono" %><br />
    <%= f.text_field :phone_number,  autofocus: true, class:"form-control" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :birthdate, "Fecha de nacimiento" %><br/><br/>
    <%= f.date_select :birthdate, :order => [:day, :month, :year], :start_year => 1900,  autofocus: true, class:"form-control" %><br/><br/>
  </div>

  <div class="form-group">
    <%= f.label :gender, "Género" %> <br/>
    <%= f.label :gender_male, 'Masculino' %>
    <%= f.radio_button :gender, 'Masculino', :checked => true %>
    <%= f.label :gender_female, 'Femenino' %>
    <%= f.radio_button :gender, 'Femenino' %><br/>
  </div>

  <div class="field">
      <%= f.label :type, "Rol" %><br />
      <%= f.select :type, options_for_select(["Admin","Member","King"]),  autofocus: true, class:"form-control" %>
    </div>

  <div class="actions">
    <%= f.submit "Crear Cuenta" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
