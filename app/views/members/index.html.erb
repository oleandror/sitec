<p id="notice"><%= notice %></p>

<h1>Members</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Last name</th>
      <th>Dni</th>
      <th>Phone number</th>
      <th>Address</th>
      <th>City</th>
      <th>Gender</th>
      <th>Birthdate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.last_name %></td>
        <td><%= member.dni %></td>
        <td><%= member.phone_number %></td>
        <td><%= member.address %></td>
        <td><%= member.city %></td>
        <td><%= member.gender %></td>
        <td><%= member.birthdate %></td>
        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

